{
  "private": true,
  "name": "node-typescript",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --watch \"src/\" --exec \"ts-node src/entry.ts\" -e ts",
    "debug": "nodemon --watch \"src/\" --exec \"node -r ts-node/register --inspect src/entry.ts\" -e ts",
    "fmt": "prettier --write \"src/**/*.ts\"",
    "fmt:p": "prettier-package-json --write \"*.json\"",
    "prod": "npm run build && node dist/entry.js",
    "test": "jest --no-cache"
  },
  "dependencies": {
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/supertest": "^2.0.7",
    "express": "^4.16.4",
    "jest": "^24.5.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "prettier-package-json": "^2.1.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.4000"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
